<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/phrase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="31dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/sprache_1"
        android:maxEms="7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/phrase2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/sprache_2"
        android:maxEms="7"
        android:layout_marginEnd="10dp"
        android:layout_alignBaseline="@+id/phrase1"
        android:layout_alignBottom="@+id/phrase1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:layout_above="@+id/phrase2"
        android:layout_alignStart="@+id/phrase1" />

    <TextView
        android:id="@+id/lang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phrase2"
        android:layout_alignEnd="@+id/phrase2"
        android:text="" />

</RelativeLayout>